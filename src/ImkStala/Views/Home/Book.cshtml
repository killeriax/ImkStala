@{
    ViewData["Title"] = "Book";
}

<div class="container">
    <div class="jumbotron">
        <h2>Uzsirezervuokite staliuka Lietuvos restorane!</h2>
        <div class="bookingInfo">
            <div class="picker">
                <select class="peopleCount">
                    <option> 2 zmones</option>
                    <option> 3 zmones</option>
                </select>
            </div>
            <div class="picker">
                <input id="datepicker" type="text" placeholder="Pasirinkite data" class="input" />
            </div>
            <div class="picker">
                <select class="timePicker">
                    <option> 10:00 </option>
                    <option> 10:30 </option>
                </select>
            </div>
            <div class="picker">
                <input id="cityPicker" type="text" placeholder="Iveskite miesta" class="input" />
            </div>
            <div class="picker">
                <button type="submit" class="submitButton"> Surasti </button>
            </div>
        </div>
    </div>
</div>
